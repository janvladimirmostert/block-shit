{
  "name": "Block Shit",
  "version": "1.0.1",
  "description": "Block unwanted content",
  "manifest_version": 3,
  "author": "polyglotamus",
  "action": {
    "default_popup": "index.html",
    "default_title": "Block Shit"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [],
  "content_scripts": [
    {
      "matches": [
        "https://facebook.com/",
        "https://*.facebook.com/"
      ],
      "match_about_blank": false,
      "js": [
        "scripts/facebook.js"
      ],
      "run_at": "document_start",
      "world": "MAIN"
    },
    {
      "matches": [
        "https://instagram.com/",
        "https://*.instagram.com/"
      ],
      "match_about_blank": false,
      "js": [
        "scripts/instagram.js"
      ],
      "run_at": "document_start",
      "world": "MAIN"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
