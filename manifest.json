{
    "name": "Block Shit",
    "version": "1.0.0",
    "description": "Block unwanted content",
    "manifest_version": 3,
    "author": "Polyglotamus",
    "action":{
        "default_popup": "index.html",
        "default_title": "Block Shit"
    },
    "permissions": ["activeTab", "scripting"],
    "content_scripts": [
        {
            "matches": ["https://facebook.com/*", "https://*.facebook.com/*"],
            "match_about_blank": false,
            "js": ["scripts/facebook.js"],
            "run_at": "document_start",
            "world": "MAIN"
        },
        {
            "matches": ["https://instagram.com/*", "https://*.instagram.com/*"],
            "match_about_blank": false,
            "js": ["scripts/instagram.js"],
            "run_at": "document_start",
            "world": "MAIN"
        }
    ]
}
